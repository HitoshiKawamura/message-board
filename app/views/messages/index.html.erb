<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
    <span class="label label-info"><%= message.name %></span>
    <%= message.body %>
    <br>
    <% end %>
  </div>
</div>

<%= form_for @message , html: { class: 'form-horizontal' } do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
  <% end %>
  <div class="form-group">
    <label class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", rows: "1" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
    <%= f.text_field :body, class: "form-control", rows: "2" %>
    </div>
  </div>
  <%= f.submit class: "btn btn-lg btn-primary center-block" %>
<% end %>